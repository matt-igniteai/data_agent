{
    "mcpServers": {
        "ignite_sql_server_mcp": {
            "command": "uv",
            "args": [
                "run",
                "mcp_sql.py"
            ]
        },

        "ignite_viz_mcp": {
            "command": "uv",
            "args": [
                "run",
                "mcp_visualisation.py"
            ]
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "."
            ]
        },
        "fetch": {
            "command": "uvx",
            "args": [
                "mcp-server-fetch"
            ]
        }
    }
}